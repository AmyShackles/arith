#!/usr/bin/env node

const fs = require("fs");
const { parseAndTranspile } = require("../src/parse-and-evaluate");

const file = process.argv.slice(2)[0];
const input = fs.readFileSync(file, "utf-8");

const code = `${parseAndTranspile(input)}\n`;
const newFile = `${file.split(".")[0]}.js`;

fs.writeFileSync(newFile, code);
